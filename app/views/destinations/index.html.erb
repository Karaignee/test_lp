<div class="container">

<h1>Listing destinations</h1>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Overview</th>
      <th>Before you go</th>
      <th>Gettin around</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @destinations.each do |destination| %>
      <tr>
        <td><%= destination.title %></td>
        <td><%= destination.overview %></td>
        <td><%= destination.before_you_go %></td>
        <td><%= destination.gettin_around %></td>
        <td><%= link_to 'Show', destination %></td>
        <td><%= link_to 'Edit', edit_destination_path(destination) %></td>
        <td><%= link_to 'Destroy', destination, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

</div>

<br>

<%= link_to 'New Destination', new_destination_path %>
